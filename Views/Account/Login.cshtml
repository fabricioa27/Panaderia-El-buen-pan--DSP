@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null; // 🚫 Sin layout en esta vista
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Panadería "El buen pan"</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light d-flex justify-content-center align-items-center vh-100">

    <div class="card shadow-lg" style="width: 25rem;">
        <div class="card-header text-center bg-primary text-white">
            <h3>🍞 Panadería "El buen pan"</h3>
            <h6>Inicio de Sesión</h6>
        </div>

        <div class="card-body">
            <form method="post" asp-action="Login">
                <div class="mb-3">
                    <label class="form-label">Usuario</label>
                    <input type="text" name="username" class="form-control" placeholder="admin o vendedor" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Contraseña</label>
                    <input type="password" name="password" class="form-control" placeholder="1234" required />
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center py-2">@ViewBag.Error</div>
                }

                <button type="submit" class="btn btn-primary w-100 mb-3">🔐 Iniciar Sesión</button>
            </form>

            <div class="alert alert-info text-center small mb-0">
                <strong>Usuarios de prueba:</strong><br />
                👑 <b>admin</b> / 1234<br />
                🧍 <b>vendedor</b> / 1234
            </div>
        </div>
    </div>

</body>
</html>
