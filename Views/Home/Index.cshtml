@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center mt-5">
    <h1 class="display-5">🥐 Bienvenido a Panadería DSP</h1>
    <p class="lead">Sistema de gestión de productos y ventas</p>
    <hr class="my-4" />

    @if (!User.Identity.IsAuthenticated)
    {
        <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg">
            Iniciar sesión
        </a>
    }
    else
    {
        <h5 class="mt-3">Sesión iniciada como <strong>@User.Identity.Name</strong></h5>

        @if (User.IsInRole("Admin"))
        {
            <a asp-controller="Products" asp-action="Index" class="btn btn-success me-2">Administrar Productos</a>
            <a asp-controller="Sales" asp-action="Index" class="btn btn-info">Ver Ventas</a>
        }
        else if (User.IsInRole("Vendedor"))
        {
            <a asp-controller="Sales" asp-action="Index" class="btn btn-primary">Registrar Ventas</a>
        }

        <div class="mt-3">
            <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-danger">Cerrar sesión</a>
        </div>
    }
</div>
