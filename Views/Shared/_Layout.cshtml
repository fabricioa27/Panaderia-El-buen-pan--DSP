<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Panadería El buen pan</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-controller="Account" asp-action="Inicio">🥐 Panadería El buen pan</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menu" aria-controls="menu" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="menu">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    @* 🔐 Solo mostrar opciones si hay sesión iniciada *@
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        @* 👑 Opciones del ADMIN *@
                        if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Dashboard" asp-action="Index">📊 Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Products" asp-action="Index">📦 Productos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Sales" asp-action="Index">🧾 Ventas</a>
                            </li>
                        }
                        @* 👤 Opciones del VENDEDOR *@
                        else if (User.IsInRole("Vendedor"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Sales" asp-action="Index">🛒 Registrar Ventas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Inicio">🏠 Inicio</a>
                            </li>
                        }
                    }
                </ul>

                @* 🔐 Datos de usuario y botón logout *@
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <span class="navbar-text text-light me-3">
                        <i class="bi bi-person-circle"></i> @User.Identity.Name
                    </span>
                    <a class="btn btn-outline-danger btn-sm" asp-controller="Account" asp-action="Logout">Cerrar sesión</a>
                }
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="border-top py-3 text-center text-muted mt-5">
        <small>&copy; @DateTime.Now.Year - Panadería DSP</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
