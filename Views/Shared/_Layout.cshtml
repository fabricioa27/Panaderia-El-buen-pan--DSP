@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@{
    var user = Context.User;
    bool isAdmin = user.IsInRole("Admin");
    bool isVendedor = user.IsInRole("Vendedor");
    string nombreUsuario = user.Identity?.Name ?? "Invitado";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Panadería "El buen pan"</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-white" href="#">
                    🍞 Panadería "El buen pan"
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (isAdmin)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Dashboard" asp-action="Index">🏠 Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Products" asp-action="Index">📦 Productos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Sales" asp-action="Index">💰 Ventas</a>
                            </li>
                        }
                        else if (isVendedor)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Vendedor" asp-action="Ventas">🛒 Realizar Venta</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (user.Identity != null && user.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="navbar-text text-white me-3">
                                    👋 Bienvenido, <strong>@nombreUsuario</strong>
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Logout">Cerrar sesión</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container mt-4 mb-5">
        @RenderBody()
    </main>

    <footer class="text-center text-muted py-3 border-top">
        <small>© 2025 Panadería "El buen pan"</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
