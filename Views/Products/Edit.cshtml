@model Panaderia_DSP.Models.ProductViewModel
@{
    ViewData["Title"] = "Editar Producto";
}

<h3 class="mb-4">✏️ Editar Producto</h3>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Categoría</label>
        <select name="Categoria" class="form-control" required>
            <option value="">-- Seleccione categoría --</option>
            <option value="Pan Dulce" selected='@(Model.Categoria == "Pan Dulce")'>Pan Dulce</option>
            <option value="Pan Salado" selected='@(Model.Categoria == "Pan Salado")'>Pan Salado</option>
            <option value="Bebidas" selected='@(Model.Categoria == "Bebidas")'>Bebidas</option>
            <option value="Repostería" selected='@(Model.Categoria == "Repostería")'>Repostería</option>
            <option value="Galletas" selected='@(Model.Categoria == "Galletas")'>Galletas</option>
            <option value="Otros" selected='@(Model.Categoria == "Otros")'>Otros</option>
        </select>
        <span class="text-danger">@Html.ValidationMessage("Categoria")</span>
    </div>

    <div class="mb-3">
        <label asp-for="Precio" class="form-label"></label>
        <input asp-for="Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Stock" class="form-label"></label>
        <input asp-for="Stock" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning">Actualizar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>